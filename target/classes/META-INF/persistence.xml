<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="JPAPU" transaction-type="RESOURCE_LOCAL">
    <class>ar.org.centro8.curso.java.entities.Cliente</class>
    <class>ar.org.centro8.curso.java.entities.Detalle</class>
    <class>ar.org.centro8.curso.java.entities.Articulo</class>
    <class>ar.org.centro8.curso.java.entities.Factura</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/negocioWeb?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="centro8"/>
      <property name="hibernate.show_sql" value="true"/>      
    </properties>
  </persistence-unit>
</persistence>
